.form-login,
.form-sing-up
  position: relative;
  width: 264px;

  &::before
    content: '';
    position: absolute;
    bottom: calc(100% + 32px);
    left: 50%;
    display: block;
    width: 55px;
    height 55px;
    transform: translateX(-50%);
    background-image: url('../../../static/images/icons/logo.svg');
    background-repeat: no-repeat;

  & button[type="submit"]
    margin-top: 24px;
    width: 100%;
    height: 40px;
    border-color: var(--butterscotch);
    border-radius: 4px;
    font-family: Roboto;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.14;
    letter-spacing: normal;
    color: var(--white);
    background-color: var(--butterscotch);
    cursor: pointer;
    transition: 0.2 background-color;

  & button[type="submit"]:hover
    background-color: darken(#ffc045, 15%);

  & button[type="submit"]:disabled
    background-color: lighten(#ffc045, 60%);
    pointer-events: none;

.form-login
  margin-top: 274px;

.form-sing-up
  margin-top: 210px;

.sign-up,
.login,
.error
  font-family: Roboto;
  font-size: 14px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;

.sign-up,
.login
  margin-top: 36px
  color: var(--white);
  margin-bottom: auto;

  & button
    padding: 0;
    border: none;
    background: none;
    color: var(--butterscotch);
    cursor: pointer;

  & button:hover
    color: darken(#ffc045, 15%);
    transition: 0.2 background-color;

.error
  margin-top: 24px
  color: var(--danger-red);
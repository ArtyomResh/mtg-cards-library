.filter 
  &:not(:first-child) 
    margin-top: 16px;
    
  & input 
    position: absolute;
    top: -9999px;
    left: -9999px;
    clip-path: polygon(0px 0px,0px 0px,0px 0px,0px 0px);

  & input:checked + label::before 
    background-color: var(--dark-grey);
    border-color: var(--dark-grey);

  & input:checked + label::after 
    display: block;

  & label 
    position: relative;
    padding-left: 24px;
    display: flex;
    align-items: center;
    min-height: 16px;
    font-family: Roboto;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.14;
    letter-spacing: normal;
    color: var(--dark-grey);
    user-select: none;
    cursor: pointer;

  & label::before 
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    box-sizing: border-box;
    width: 16px;
    height: 16px;
    border: 1px solid #c5cfde;
    transition: border-color 0.2s ease-out, background-color 0.2s ease-out;

  & label::after 
    content: '';
    position: absolute;
    top: 2px;
    left: 5px;
    display: none;
    width: 5px;
    height: 9px;
    border-right: 1px solid #fff;
    border-bottom: 1px solid #fff;
    transform: rotate(30deg);
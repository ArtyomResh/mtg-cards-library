.filter-group
  position: relative

  & button
    margin-right: -1px;
    padding: 20px 26px;
    display: flex;
    height: 56px;
    align-items: center;
    border: solid 1px #e2e2e2;
    font-family: Roboto;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.14;
    letter-spacing: normal;
    color: var(--greyish-teal);
    background-color: #ffffff;

  & button svg
    margin-left: 6px;
    transform: rotate(180deg);

  & .dropdown
    position: absolute;
    top: calc(100% - 1px);
    left: 0;
    z-index: 1;
    padding: 16px 26px;
    border: solid 1px #646e74;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    box-shadow: 0 4px 8px 0 rgba(50, 60, 72, 0.08);
    background-color: #ffffff;
    
.filter-group:last-of-type
  & button
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    
.filter-group_active,
.filter-group_focused
  & button
    position: relative;
    border-color: var(--dark-grey);
    color: var(--dark-grey);
    z-index: 1;

.filter-group_active
  & button svg
    transform: rotate(0deg);
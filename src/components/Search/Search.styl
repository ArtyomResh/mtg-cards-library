.search
  margin-top: 26px;
  display: flex;
  box-shadow: 0 4px 8px 0 rgba(50, 60, 72, 0.08);

  & input
    padding-left: 52px;
    padding-right: 21px;
    display: block;
    width: 100%;
    height: 56px;
    border: solid 1px #e2e2e2;
    border-right-width: 0px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    font-family: Roboto;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.14;
    letter-spacing: normal;
    color: var(--greyish-teal);
    background-color: #ffffff;
    -webkit-appearance: none;

.search_focused input,
.search input:focus
  outline: none;
  border-color: var(--dark-grey);
  color: var(--dark-grey);

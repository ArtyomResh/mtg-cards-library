.user
  padding: 32px 24px;
  display: flex;
  align-items: center;
  box-sizing: border-box;

  & img
    color: var(--white);

  & span
    margin-left: 16px;
    margin-right: auto;
    font-family: Roboto;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.14;
    letter-spacing: normal;
    color: var(--white);

  & button
    background: none
    font-size: 0;
    border: none;
    color: var(--white);
    cursor: pointer;
    transition: 0.1s color

  & button:hover
    color: darken(#f9f9f9, 30%);


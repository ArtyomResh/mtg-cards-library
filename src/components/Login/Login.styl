.form
  position: relative;
  width: 264px;

  &::before
    content: '';
    position: absolute;
    bottom: calc(100% + 32px);
    left: 50%;
    display: block;
    width: 55px;
    height 55px;
    transform: translateX(-50%);
    background-image: url('../../../static/images/icons/logo.svg');
    background-repeat: no-repeat;

  & button[type="submit"]
    margin-top: 24px;
    width: 100%;
    height: 40px;
    border-color: var(--butterscotch);
    border-radius: 4px;
    font-family: Roboto;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.14;
    letter-spacing: normal;
    color: var(--white);
    background-color: var(--butterscotch);
    cursor: pointer;
    transition: 0.2 background-color;

  & button[type="submit"]:hover
    background-color: darken(#ffc045, 15%);

.sign-up
  margin-top: 36px
  margin-bottom: auto;
  font-family: Roboto;
  font-size: 14px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: normal;
  text-align: center;
  color: var(--white);

  & a
    color: var(--butterscotch);
    cursor: pointer;

  & a:hover
    color: darken(#ffc045, 15%);
    transition: 0.2 background-color;

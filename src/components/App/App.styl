.app
  position: relative;
  display: flex;

  & article
    padding-left: 76px;
    padding-right: 396px;

  & aside
    top: 0;
    right: 0;
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 320px;
    height: 100vh;
    background-color: var(--dark-grey);

  & aside h2
    display: flex;
    align-items: center;
    justify-content: center;
    width: 320px;
    height: 40px;
    font-family: Roboto;
    font-size: 14px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 1.14;
    letter-spacing: normal;
    color: var(--white);
    background-color: #2d2f30;